ScreenManager:
    LoginPage:
    HomePage:

<LoginPage>:
    name: 'login'
    Screen: 

        MDCard:
            size_hint: None, None
            size: 600,800
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 50
            spacing: 50
            orientation: 'vertical'

            MDLabel:
                id: Welcome_label
                text: "Login form"
                font_size: 65
                halign: 'center'
                size_hint_y: None 
                height: self.texture_size[1]
                padding_y: 30


            MDTextFieldRound:
                id: username_label
                hint_text: "Username"
                icon_right: "account"
                size_hint_x: None
                width: 400
                font_size: 40     
                pos_hint: {"center_x": 0.5}
            
            MDTextFieldRound:
                id: password_label
                hint_text: "Password"
                icon_right: "eye_off"
                size_hint_x: None
                width: 400
                font_size: 40     
                pos_hint: {"center_x": 0.5}
                password: True


            MDRectangleFlatButton:
                text: 'Sign out'
                on_release: root.manager.current = 'home'
                right_pad: True
                font_size: 40 
                pos_hint: {"center_x": 0.5}

            MDRoundFlatButton:
                text: "Clear"
                font_size: 40
                pos_hint: {"center_x": 0.5}
                on_press: app.clear()
            
            Widget:
                size_hint_y: None
                height: 20

           

<HomePage>:
    name: 'home'
    MDLabel:
        text: "Welcome User"
        halign: "center"
    MDRectangleFlatButton:
        text: 'Sign out'
        pos_hint: {'center_x':0.5,'center_y':0.2}
        on_release: root.manager.current = 'login'
